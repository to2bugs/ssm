<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.otto.mybatis.mapper.OrderMapper">

    <resultMap id="orderRM" type="com.otto.mybatis.bean.Order">
        <id column="id" property="id" />
        <result column="address" property="address" />
        <result column="amount" property="amount" />
        <result column="customer_id" property="customerId" />
        <!-- association: 唯一关联 封装规则-->
        <association property="customer" javaType="com.otto.mybatis.bean.Customer">
            <id column="c_id" property="id" />
            <result column="customer_name" property="customerName" />
            <result column="phone" property="phone" />
        </association>
    </resultMap>
    <select id="getOrderByIdWithCustomer" resultMap="orderRM">
        select
            o.id, o.address, o.amount, o.customer_id, c.id c_id, c.customer_name, c.phone
        from t_order o left join t_customer c on o.customer_id = c.id
        where o.id = #{id}
    </select>
</mapper>